@model IEnumerable<ImageServiceWebApplication.Models.ImageWebModel.Student>

@{
    ViewBag.Title = "Image Web";
}
<br /><br />

@* Getting the service status *@


<h3>Service status is: @ViewBag.status</h3>
@* is active or not *@
<br /><br /><br />


<h3>Total number of pictures in output dir: @ViewBag.numOfPhotos</h3>
<br /><br /><br />


<h3>Student details:</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
    </tr>
    @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
        </tr>
        }
</table>


