@model IEnumerable<ImageServiceWebApplication.Models.PhotosModel.Photo>
@{
    ViewBag.Title = "Photos";
}


<br /><br />

@foreach (var item in Model)
    {
    <tr>
        <td>
            <div class="col-xs-18 col-sm-6 col-md-3">
                <div class="thumbnail" >
                    <img src= "@Url.Content(@item.RelPath)" class="img-circle" width="242" height="200">
                    <div class="caption">
                        <h4>@item.Name</h4>
                        <p> Year: @item.CreationYear</p>
                        <p> Month: @item.CreationMonth</p>
                        <p><a href="@Url.Action("PhotoView", new { photoView = item.RealRelPath })" class="btn btn-info btn-xs" id="viewButton" name="@item.Name" role="button">View</a>
                        <a href="@Url.Action("DeleteImage", new { photoView = item.RealRelPath })" id="delete" class="btn btn-danger btn-xs" role="button">Delete</a></p>
                    </div>
                </div>
            </div>
        </td>
    </tr>
    }
